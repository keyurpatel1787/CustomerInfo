@model CustomerInfo.ViewModel.CustomerMembershipViewModel
@{
    ViewBag.Title = "New";
}

<h2>New Customer</h2>
@using (Html.BeginForm("Create", "Customers"))
{
    @Html.ValidationSummary();
    <div class="form-group">
        @Html.LabelFor(a => a.Customer.Name)
        @Html.TextBoxFor(a => a.Customer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Customer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Customer.Address)
        @Html.TextBoxFor(a => a.Customer.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Customer.Address)
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Customer.City)
        @Html.TextBoxFor(a => a.Customer.City, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Customer.City)
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Customer.Birthdate)
        @Html.TextBoxFor(m => m.Customer.Birthdate, "{0:d MMM yyyy}", new { @class = "form-control" })
       
        @Html.ValidationMessageFor(a => a.Customer.Birthdate)
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Customer.MembershipTypeId)
        @Html.DropDownListFor(a => a.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select MembershipType", new { @class = "form-control" })
    </div>
    @Html.HiddenFor(a => a.Customer.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>

}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}